{
  "manifest_version": 3,
  "name": "All Aboard ATS Auto-Filler",
  "version": "1.1.0",
  "description": "Automatically fill job application forms with your personal information",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_page": "index.html",
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://www.indeed.com/*",
        "https://www.glassdoor.com/*",
        "https://www.ziprecruiter.com/*",
        "https://www.monster.com/*",
        "https://www.dice.com/*",
        "https://www.governmentjobs.com/*",
        "https://www.usajobs.gov/*",
        "https://www.credible.com/*",
        "https://www.workable.com/*",
        "https://www.applicant-tracking.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.workday.com/*",
        "https://*.talentlms.com/*",
        "https://*.successfactors.com/*",
        "https://*.bamboohr.com/*",
        "https://*.careers/*",
        "https://*.jobs/*",
        "https://*.apply/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["pdf.worker.min.js"],
      "matches": [
        "https://www.linkedin.com/*",
        "https://www.indeed.com/*",
        "https://www.glassdoor.com/*",
        "https://www.ziprecruiter.com/*",
        "https://www.monster.com/*",
        "https://www.dice.com/*",
        "https://www.governmentjobs.com/*",
        "https://www.usajobs.gov/*",
        "https://www.credible.com/*",
        "https://www.workable.com/*",
        "https://www.applicant-tracking.com/*",
        "https://*.greenhouse.io/*",
        "https://*.lever.co/*",
        "https://*.workday.com/*",
        "https://*.talentlms.com/*",
        "https://*.successfactors.com/*",
        "https://*.bamboohr.com/*",
        "https://*.careers/*",
        "https://*.jobs/*",
        "https://*.apply/*"
      ]
    }
  ]
}